
<% extend('../layout') %>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div style="display:inline;" class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4  class="modal-title" id="title_delete"></h4>
      </div>
      <div class="modal-body">
      <div class="alert alert-dismissible alert-danger">
       <strong>Are yue sore Delete it?</strong>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="delb" onclick="deleted()" class="btn btn-danger" >Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="edit" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div style="display:inline;" class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4  class="modal-title" id="title_edit"></h4>
      </div>
      <div class="modal-body">
      <form id="frm_edit">
        <div  class="row">
          <div class="col align-self-start">

          </div>
          <div class="col align-self-center">
           <div class="form-group">
            <label class="col-form-label col-form-label-lg mb-3  text-info" for="name">
              <i class="fas fa-user-edit"></i>
            </label>
            <input class="form-control form-control-lg require" type="text" placeholder="Name" id="name" name='name'>
           </div>
           <div class="form-group">

            <input class="form-control form-control-lg require" type="email" placeholder="Email" name='email' id="email">
           </div>
           <div class="form-group">

            <input class="form-control form-control-lg require" type="text" placeholder="Password" name='Password' id="Password">
           </div>

          </div>

          <div class="col align-self-end">

          </div>

        </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="editb" onclick="edited()" class="btn btn-danger" >Edit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">name</th>
      <th scope="col">email</th>
      <th scope="col">action</th>
    </tr>
  </thead
  <tbody id="tbody">
      <% users.forEach(function(user){ %>
    <tr>
      <th scope="row"><%- user._id %></th>
       <td><span class="badge badge-pill badge-info"><%- user.name %></span></td>
       <td><span class="badge badge-pill badge-success"><%- user.email %></span></td>
       <td>
         <a style="color:#497f9c;" data-toggle="modal" data-target="#edit" href="javascript:void(0)" onclick="ready_edit('<%- user._id %>','<%- user.name %>')">
           <i class="fas fa-edit"></i>
         </a>
          <a style="color:red;" onclick="ready_delete('<%- user._id %>','<%- user.name %>')"  data-toggle="modal" data-target="#myModal" href="javascript:void(0)">
            <i class="fas fa-trash"></i>
          </a>
       </td>
    </tr>
      <% }); %>
  </tbody>

</table>

<% include ./user_all_view.js %>
